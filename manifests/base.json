{
  "manifest_version": 3,
  "name": "Jelu Importer",
  "description": "Scrape book metadata from major catalog sites and import into your self-hosted Jelu instance.",
  "version": "1.7.1",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Import book into Jelu"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "*://www.goodreads.com/*",
    "*://goodreads.com/*",
    "*://*.amazon.com/*",
    "*://books.google.com/*",
    "*://www.books.google.com/*",
    "*://www.google.com/books/*",
    "*://google.com/books/*",
    "*://*.audible.com/*",
    "https://www.googleapis.com/*"
  ],
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.goodreads.com/*",
        "*://goodreads.com/*",
        "*://*.amazon.com/*",
        "*://books.google.com/*",
        "*://www.books.google.com/*",
        "*://www.google.com/books/*",
        "*://google.com/books/*",
        "*://*.audible.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
